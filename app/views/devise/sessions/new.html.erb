<div class="flex justify-center items-center  mt-8  ">
  <div class="flex justify-center items-center bg-sky-300 px-4 py-2">
  <div>
    <h2 class="text-2xl font-bold mb-3 text-purple-700">Log in</h2>
  </dive>
  <div class="mb-4 rounded-lg">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Your Email",class:"rounded-lg"%>
      </div>
  </div>

  <div class="mb-4 ">
    <div class="field rounded-full">
      <%= f.password_field :password, autocomplete: "current-password", placeholder:"Your Password",class:"rounded-lg"%>
    </div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions w-[100px] ml-[40px] py-1 px-4  rounded-lg bg-red-300 text-white-50">
    <%= f.submit "Log in",class:"cursor-pointer"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
  </div>

</div>