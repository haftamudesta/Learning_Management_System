<div class="flex flex-col lg:flex-row gap-6">
    <div class="mb-8">
    
      <% if notice.present? %>
        <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
      <% end %>

      <%= (@lesson.video.present) ? (video_tag @lesson.video,autoplay: false,controls: true,class:"rounded"):"No Video available"%>
      <div class="py-2 border p-4 rounded mb-6">
        <h1 class="text-2xl font-semibold"><%= @lesson.title%></h1>
        <p class="text-gray-600 "><%= @lesson.description%></p>
      </div>
      <div class="my-6 lg:mb-0">
        <%= link_to "Mark as Completed",course_lesson_path(@course,@lesson),data:{'turbo-method'=> :put},class:"bg-green-400 py-2 px-3 mt-4 text-white-50 "%>
      </div>
    </div>
    <div>
      <div class="lg:overflow-y-scroll">
        <%= render "sidebar",course:@course,completed_lessons:@completed_lessons,paid_for_course:@paid_for_course%>
      </div>
    </div>
</div>
