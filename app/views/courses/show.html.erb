
<div class="mx-auto w-full flex flex-col lg:flex-row pb-6 ml-8 mr-8">
  <div class="mx-auto w-full">
    <% if notice.present?%>
      <p class="px-3 y-2 bg-green-60 text-green-600 text-md rounded-lg font-medium"><%= notice %></p>
    <% end %>
    <% if @course.lessons.any? && @course.lessons.first.video.present?%>
      <%= video_tag @course.lessons.first.video,controlls: true, class:"w-full rounded mb-6"%>
    <% end %>
    <div class="border rounded p-4">
      <div class="flex flex-wrap justify-start items-center w-full mb-2">
        <% @course.categories.each do |category|%>
          <div class="bg-red-500 text-pink-400 text-sm font-semibold mt-2 mr-2 px-3 py-0.5 rounded"><%= category.name%></div>
        <% end %>
      </div>
      <div class="flex gap-4"><span class="text-2xl font-bold ml-4"><%=@course.lessons.count  %></span><%= "Lesson".pluralize(@course.lessons.count)%> Available</div>
    </div>
    <div class="shadow-lg  md:w-1/4 mb-4 mt-4">
      <h1><%= @course.title%></h1>
      <h1><%= @course.description%></h1>
    </div>
    <%=render "sidebar"%>
    <%= link_to "Back to courses", courses_path, class:"text-md text-sky-500 rounded-full px-4 py-2 mt-6 bg-pink-300 text-bold" %>
  </div>
</div>

