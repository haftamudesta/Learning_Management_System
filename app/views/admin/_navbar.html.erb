<header class="hidden sm:flex justify-between items-center text-gray-700 px-6 py-6 bg-teal-600 w-full">
   <div class="container mx-auto flex justify-between items-center">
        <div class="flex gap-4">
                <%= link_to "DashBoard",admin_path%>
                <%= link_to "Courses",admin_courses_path%>
                <%= link_to "Users",admin_users_path%>
        </div>
        <div>
                <%= link_to admin_path do%>
                        <p>Logo</p>
                <% end %>
        </div>
        <div class="flex gap-6">
                <% if user_signed_in? %>
                  <%= link_to "Sign Out",destroy_user_session_path,data:{'turbo_method'=>:delete,'turbo_confirm'=>'Are you sure'},class:" text-green-300 font-bold px-4 py-1 hover:bg-purple-800"%>
